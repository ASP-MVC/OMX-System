@using OMX.Common
@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole(GlobalConstants.AdminRole))
    {
        <li class="dropdown close">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="true">
                Administration <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Add new category", "Create", "Categories", new { Area = string.Empty }, null)</li>
                <li>@Html.ActionLink("Manage Users", "Index", "Users", new { Area = GlobalConstants.AdministrationArea }, null)</li>
                <li>@Html.ActionLink("Manage Categories", "Index", "Categories", new { Area = GlobalConstants.AdministrationArea }, null)</li>
            </ul>
        </li>
    }
    <li>@Html.ActionLink("Create Ad", "Create", "Ads", new { Area = string.Empty }, null)</li>
}
