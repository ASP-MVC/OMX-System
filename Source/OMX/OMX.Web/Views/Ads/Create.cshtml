@model OMX.Web.Models.BindingModels.CreateAdBindingModel
@{
    ViewBag.Title = "Add new Ad";
}
@if (TempData.ContainsKey(GlobalConstants.ErrorKey))
{
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <h3 class="text-center field-validation-error" style="color:red">@TempData[GlobalConstants.ErrorKey]</h3>
        </div>
    </div>
}
<div class="well">
    <h2 class="text-center">@ViewBag.Title</h2>
</div>

@using (Html.BeginForm("Create", "Ads", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.EditorFor(a => a.Title)
    @Html.EditorFor(a => a.Content)
    @Html.EditorFor(a => a.SubCategoryId, new { ListItem = Model.SubCategories })
    <div class="divider"></div>
    <div>
        @Html.EditorFor(a => a.Price)
    </div>
    <div class="divider"></div>
    <div>
        @Html.EditorFor(a => a.files)
    </div>

    <input type="submit" class="btn btn-primary" value="Create"/>
}